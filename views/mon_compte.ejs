<%- include('header') %>
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Compte</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: 0 auto;
        }
        .section-title {
            background-color: #ff6600;
            color: white;
            padding: 10px;
            font-size: 1.2em;
            margin-bottom: 10px;
        }
        .profile-section, .info-section, .reviews-section {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 50px;
        }
        .profile-picture {
            float: left;
            margin-right: 20px;
        }
        .profile-picture img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
        }
        .profile-info {
            overflow: hidden;
        }
        .profile-info p {
            margin: 0;
        }
        .profile-info .username {
            color: red;
            font-size: 1.2em;
        }
        .info-section p {
            margin: 5px 0;
        }
        .reviews-section .review {
            display: inline-block;
            width: 45%;
            margin-right: 5%;
            margin-bottom: 10px;
        }
        .reviews-section .review:last-child {
            margin-right: 0;
        }
        .reviews-section .review h3 a {
            margin: 0;
            color: #ff6600;
        }
        .delete_account {
            margin-top: 20px;
        }
        .delete_account a {
            color: red;
            text-decoration: none;
        }
        .delete_account a:hover {
            text-decoration: underline;
        }
        
    </style>
</head>
<body>

<div class="container">
    <!-- Section Mon profil -->
    <div class="section-title">Mon profil</div>
    <div class="profile-section">
        <div class="profile-picture">
            <img src="/images_profil/profil_1.png" alt="Profile Icon">
        </div>
        <div class="profile-info">
            <p class="username"><%= user.username %></p>
            <!--<p>Inscrit depuis le <span id="date_inscription_user">date_inscription_user</span></p>-->
            <p><span id="nb_avis_user"><%= user.nb_avis %></span> avis</p>
        </div>
        <div class="delete_account">
            <a href="/delete_account">Supprimer mon compte</a>
        </div>
    </div>

<!-- Section Mes derniers avis -->
<div class="section-title">Mes derniers avis</div>
<div class="reviews-section">
    <% if (reviews && reviews.length > 0) { %>
        <% reviews.forEach(function(review) { %>
            <div class="review">
                <h3><a href="/jeu/<%= review.ID_jeu %>"><%= review.titre %></a></h3>
                <p><%= review.avis_user %></p> <!-- Utiliser `avis_user` ici -->
                <p>Note : <%= review.note_user %>/5</p> <!-- Utiliser `note_user` ici -->
            </div>
        <% }); %>
    <% } else { %>
        <p>Vous n'avez pas encore laiss√© d'avis.</p>
    <% } %>
</div>

</div>


</body>
</html>
