<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page avec Header</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        header {
            background-color: #e6e6e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header .connexion {
            background-color: #ff6600;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
        header .mon-compte {
            background-color: #28a745; /* Couleur verte */
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<header>
    <img src="/icon.png" alt="Logo" style="height: 50px;">
    <a href="http://localhost:3000/Connexion" id="user-action" class="connexion">Connexion</a>
</header>

<script>
    // Vérification de la connexion de l'utilisateur à partir de la valeur de session
    var isUserLoggedIn = <%= typeof user !== 'undefined' && user.is_connected ? 'true' : 'false' %>;

    var userAction = document.getElementById("user-action");

    if (isUserLoggedIn) {
        // L'utilisateur est connecté
        userAction.textContent = "Mon compte";
        userAction.href = "http://localhost:3000/mon_compte"; // Redirige vers la page "Mon compte"
        userAction.classList.remove("connexion");
        userAction.classList.add("mon-compte"); // Appliquer le style vert
    } 
</script>

</body>
</html>
