<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page avec Header</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        header {
            background-color: #e6e6e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header .connexion {
            background-color: #ff6600;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease; /* Animation de transition pour l'effet de survol */
        }
        header .connexion:hover {
            background-color: #cc5200; /* Couleur plus foncée au survol */
        }
        header .mon-compte {
            background-color: #28a745; /* Couleur verte */
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
            position: relative;
            transition: background-color 0.3s ease; /* Animation de transition pour l'effet de survol */

        }
        header .mon-compte:hover {
            background-color: #1e7a34; /* Couleur plus foncée au survol */
        }
        /* Styles pour le menu déroulant */
        .dropdown-content {
            display: none;/* Masquer le menu déroulant par défaut */
            position: absolute;
            background-color: white;
            max-width: 127px; /* Largeur minimale du menu déroulant */
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            right: -10;
            top: 55px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .dropdown-content a {/* a signifie lien */
            color: black;
            padding: 12px 10px;
            width: auto;
            text-decoration: none;
            display: block;
            cursor: pointer
        }
        .dropdown-content a:hover {
            background-color: #9c9c9c;

        }
        .show {
            display: block;
        }
        /* Style de l'encadré publicitaire */
        .advert-box {
            background-color: rgb(255, 0, 200); /* Couleur jaune pour attirer l'attention */
            padding: 10px 10px;
            color: black;
            font-weight: bold;
            border-radius: 5px;
            position: absolute;
            top: 1.5%; /* En dessous du header */
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            gap: 10px; /* Espace entre l'image et le texte */
            animation: slideIn 2s ease forwards, pulse 2s infinite 2s;
        }
        .advert-box img {
            width: 60px; /* Ajuste la taille de l'image */
            height: auto;
            border-radius: 0px;
        }

        /* Animation de glissement vers le haut */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-50%) translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        /* Animation de pulsation pour attirer l’attention */
        @keyframes pulse {
            0%, 100% {
                transform: translateX(-50%) scale(1);
            }
            50% {
                transform: translateX(-50%) scale(1.05);
            }
        }
    </style>
</head>
<body>

<header>
    <a href="http://localhost:3000/Connexion">
        <img src="/icon.png" alt="Logo" style="height: 50px">
    </a>
    <div id="account-menu" class="mon-compte-container">
        <a href="http://localhost:3000/Connexion" id="user-action" class="connexion">Connexion</a>
        <div id="dropdownMenu" class="dropdown-content">
            <a href="/mon_compte">Gestion de compte</a>
            <a class="deconnexion" onclick="logout()" >Se déconnecter</a>
        </div>
    </div>
    <!-- Encadré publicitaire -->
    <div class="advert-box">
        <img src="pub_viagra.jpg" alt="Publicité">
        Promotion spéciale : -20% sur notre viagra !
    </div>
</header>


<script>
    // Vérification de la connexion de l'utilisateur à partir de la valeur de session
    var isUserLoggedIn = <%= typeof user !== 'undefined' && user.is_connected ? 'true' : 'false' %>;
    var userAction = document.getElementById("user-action");
    var dropdownMenu = document.getElementById("dropdownMenu");

    if (isUserLoggedIn) {
        // L'utilisateur est connecté
        userAction.textContent = "Mon compte";
        userAction.href = "#"; // Désactive le lien par défaut
        userAction.classList.remove("connexion");
        userAction.classList.add("mon-compte");

        // Afficher/masquer le menu au clic
        userAction.onclick = function(event) {
            event.preventDefault();
            dropdownMenu.classList.toggle("show");
        };

        // Ferme le menu si on clique en dehors
        window.onclick = function(event) {
            if (!event.target.matches('#user-action')) {
                if (dropdownMenu.classList.contains('show')) {
                    dropdownMenu.classList.remove('show');
                }
            }
        };
    }

    // Fonction de déconnexion
    function logout() {
        // Mettre à jour user.is_connected à false et masquer le menu
        isUserLoggedIn = false;
        //TODO : envoyer au serveur la valeur de user.is_connected puis actualiser la page.
        
    }
</script>

</body>
</html>
