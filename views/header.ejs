<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page avec Header</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        header {
            background-color: #e6e6e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header .connexion {
            background-color: #ff6600;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
        header .mon-compte {
            background-color: #28a745; /* Couleur verte */
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
            position: relative;
        }
        /* Styles pour le menu déroulant */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 100px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            right: -10;
            top: 55px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .dropdown-content a {
            color: black;
            padding: 12px 8px;
            width: auto;
            text-decoration: none;
            display: block;
        }
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        .show {
            display: block;
        }
    </style>
</head>
<body>

<header>
    <a href="http://localhost:3000/Connexion">
        <img src="/icon.png" alt="Logo" style="height: 50px">
    </a>
    <div id="account-menu" class="mon-compte-container">
        <a href="http://localhost:3000/Connexion" id="user-action" class="connexion">Connexion</a>
        <div id="dropdownMenu" class="dropdown-content">
            <a href="/logout">Se déconnecter</a>
        </div>
    </div>
</header>

<script>
    // Vérification de la connexion de l'utilisateur à partir de la valeur de session
    var isUserLoggedIn = <%= typeof user !== 'undefined' && user.is_connected ? 'true' : 'false' %>;
    var userAction = document.getElementById("user-action");
    var dropdownMenu = document.getElementById("dropdownMenu");

    if (isUserLoggedIn) {
        // L'utilisateur est connecté
        userAction.textContent = "Mon compte";
        userAction.href = "#"; // Désactive le lien par défaut
        userAction.classList.remove("connexion");
        userAction.classList.add("mon-compte");

        // Afficher/masquer le menu au clic
        userAction.onclick = function(event) {
            event.preventDefault();
            dropdownMenu.classList.toggle("show");
        };

        // Ferme le menu si on clique en dehors
        window.onclick = function(event) {
            if (!event.target.matches('#user-action')) {
                if (dropdownMenu.classList.contains('show')) {
                    dropdownMenu.classList.remove('show');
                }
            }
        };
    }
</script>

</body>
</html>
