<%- include('header') %>
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails du Jeu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        header {
            background-color: #e6e6e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .game-detail {
            background-color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            margin: 20px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }
        .game-detail img {
            width: 200px;
            height: auto;
            border: 1px solid #ccc;
        }
        .game-info {
            flex: 1;
            margin-left: 20px;
        }
        .game-info h1 {
            font-size: 24px;
        }
        .game-info p {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }
        .btn {
            background-color: #ff6600;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
        }
        .section-title {
            background-color: #ff6600;
            color: white;
            padding: 10px;
            margin-top: 40px;
        }
        .reviews {
            padding: 20px;
            background-color: white;
            margin: 20px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }
        .review {
            margin-bottom: 20px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }
        .review h3 {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 16px;
        }
        .review h3 img {
            height: 35px;
        }
        .review .stars {
            color: #f5a623;
        }
        .related-games {
            margin: 20px;
        }
        .related-games .games-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        .related-games .game-card {
            background-color: white;
            border: 1px solid #ccc;
            padding: 10px;
            width: 23%;
            margin-bottom: 20px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }
        .related-games .game-card img {
            width: 100%;
            height: auto;
        }
        .related-games .game-card h3 {
            font-size: 18px;
            margin: 10px 0;
        }
        .related-games .game-card p {
            color: #666;
            font-size: 14px;
        }
        .related-games .game-card .rating {
            color: #f5a623;
        }
        .related-games .game-card a {
            display: block;
            text-align: right;
            color: #ff6600;
            text-decoration: none;
            font-weight: bold;
            margin-top: 10px;
        }
        .review-form {
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }
        .review-form h3 {
            margin-bottom: 15px;
            font-size: 18px;
        }
        .review-form label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
        }
        .review-form textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: vertical;
        }
        .review-form select,
        .review-form button {
            padding: 10px;
            margin-right: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .review-form button {
            background-color: #ff6600;
            color: white;
            border: none;
            cursor: pointer;
        }
        .review-form button:hover {
            background-color: #e65c00;
        }
    </style>
</head>
<body>

<div class="game-detail">
    <img src="<%= cover_url %>" alt="Cover du jeu">
    <div class="game-info">
        <h1><%= titre %></h1>
        <p>Sorti le <%= date_sortie %></p>

        <% if (availableDevice && availableDevice.length > 0) { %>
            <p>
                Disponible sur : 
                <% availableDevice.forEach(function(item) { %>
                    <span><%= item.nom_plateforme %></span>
                <% }); %>
            </p>
        <% } %>

        <p><%= game_description %></p>
        <a href="#reviews-list" class="btn">Voir les avis</a>
    </div>
</div>

<div class="reviews" id="reviews-list">
    <h2 class="section-title">Avis ★ (<%= nb_avis %>)</h2>

    <% if (reviews && reviews.length > 0) { %>
        <% reviews.forEach(function(review) { %>
            <div class="review">
                <h3>
                    <img src="/<%= review.url_image_user %>"/>
                    <%= review.pseudo_user %>
                </h3>
                <p class="stars">
                    <% for (let i = 0; i < review.note_user; i++) { %>
                        ★
                    <% } %>
                    <% for (let i = 0; i < (5 - review.note_user); i++) { %>
                        ☆
                    <% } %>
                </p>
                <p><%= review.avis_user %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>Aucun avis n'a été ajouté</p>
        <a href="" class="btn">Écrire un avis</a>
    <% } %>

<!-- Formulaire pour laisser un avis -->
    <div class="review-form">
        <h3>Laisser un avis</h3>
        <form action="/submit-review" method="POST">
            <label for="rating">Note (sur 5) :</label>
            <select name="rating" id="rating" required>
                <option value="5">5 ★★★★★</option>
                <option value="4">4 ★★★★☆</option>
                <option value="3">3 ★★★☆☆</option>
                <option value="2">2 ★★☆☆☆</option>
                <option value="1">1 ★☆☆☆☆</option>
            </select>

            <label for="reviewText">Votre avis :</label>
            <textarea id="reviewText" name="reviewText" rows="4" placeholder="Partagez votre expérience avec ce jeu"
            required></textarea>

            <button type="submit">Envoyer</button>
        </form>
    </div>
</div>

<div class="related-games">
    <h2 class="section-title">De la même catégorie</h2>
    <div class="games-container">
